    <PreferenceCategory app:title="Theme">

        <ListPreference
            app:title="Select your theme"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:title="Select your color"
            app:defaultValue="blue"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:key="color"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="notification"
            app:title="Disable Notification"
            app:summaryOff="We will send you notification"
            app:summaryOn="We wont send you notification"/>

    </PreferenceCategory>


</PreferenceScreen>