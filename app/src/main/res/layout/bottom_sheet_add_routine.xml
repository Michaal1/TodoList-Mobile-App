<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetRoutine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:textColor="@color/text_black"
                android:text="Add new routine task"
                android:textSize="30dp" />
            <EditText
                android:id="@+id/etTittleRoutine"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_black"
                android:hint="Task tittle"/>

            <TextView
                android:id="@+id/tvPickTimeRoutine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:text="Pick time"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:text="Select type:"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/theme_blue"
                    android:backgroundTint="@color/theme_blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/cbSchool"
                    android:text="School"
                    android:padding="8dp"
                    android:background="@color/School"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <CheckBox
                    android:id="@+id/cbProductivity"
                    android:text="Productivity"
                    android:background="@color/Productivity"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <CheckBox
                    android:id="@+id/cbFreetime"
                    android:text="Duty"
                    android:background="@color/Freetime"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/cbWorkout"
                    android:text="Workout"
                    android:background="@color/Workout"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <CheckBox
                    android:id="@+id/cbSleep"
                    android:text="Sleep"
                    android:background="@color/Sleep"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <CheckBox
                    android:id="@+id/cbFood"
                    android:text="Food"
                    android:background="@color/Food"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:text="Choose days:"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/theme_blue"
                    android:backgroundTint="@color/theme_blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/cbMon"
                    android:text="MON"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <CheckBox
                    android:id="@+id/cbTue"
                    android:text="TUE"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <CheckBox
                    android:id="@+id/cbWed"
                    android:text="WED"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <CheckBox
                    android:id="@+id/cbThu"
                    android:text="THU"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <CheckBox
                    android:id="@+id/cbFri"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:text="FRI"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/cbSat"
                android:padding="8dp"
                android:text="SAT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <CheckBox
                android:id="@+id/cbSun"
                android:padding="8dp"
                android:text="SUN"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <CheckBox
                android:id="@+id/cbAll"
                android:padding="8dp"
                android:text="ALL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>



            <Button
                android:id="@+id/btAddRoutine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_black"
                android:layout_marginBottom="20dp"
                android:text="ADD"/>
        </LinearLayout>

    </ScrollView>




</LinearLayout>